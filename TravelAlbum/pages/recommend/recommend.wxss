.main-container{
  display: flex;
  flex-direction: column;
}
.search{
    /*flex 布局*/
    display: flex;
    /*实现垂直居中*/
    align-items: center;
    /*实现水平居中*/
   /* justify-content: center;*/
}
.search-image{
  width: 40px;
  height: 40px;
}
.search-textarea{
  height: 30px;
  width: 300px;
  border-radius:5px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}
.album-container{
  height:38%;
  margin-top:30px;
}
.text{
  margin:5px;
}
.album{
  height:260rpx;
  width: 260rpx;

}
.scroll-container{
  white-space: nowrap; 
  display: flex;
  margin-top:10px;
}

.scroll-container-item{
  display: inline-block;
  height: 150px;
  width: 150px;
  border-radius:5px;
  margin: 10px;
  background-size: cover;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.scroll-view-item-image{
  height: 100%;
  width: 100%;
  border-radius:5px;
}
.scroll-view-item-text{
  display: block;
  text-align: center;
}
.swiper-container{

  width: 100%;
}
.swiper{
  height: 200px;
  width: 100%;
}
.swiperimage{
  width: 100%;
}


.showed-item-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  flex-wrap: wrap;
  margin-top: 20px;
  margin-left: 10px;
}

.showed-item{
  height: 360rpx;
  width: 320rpx;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  margin-bottom: 30rpx;
  margin-left: 10rpx;
  
}
.test{
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}
.item-img{
  width: 100%;
  height: 80%;
  border-radius: 5px;
}
.text-container{
  height: 20%;
  display: flex;
  justify-content:center;
  align-items: center;
}
.text{
display: inline;
}





