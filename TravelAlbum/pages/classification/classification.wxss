.main-container{
  height: 100vh;
}
.people-container{
  height: 20%;
  width: 100%;
}
.scroll-people-container{
  white-space: nowrap; 
  display: flex;
}
.scroll-people-item{
  border-radius:50%;
  display: inline-block;
  height: 70px;
  width: 70px;
  margin: 10px;
  background-color: green;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.scroll-people-image{
  height: 100%;
  width: 100%;
  border-radius:50%;
}
.location-container{
  height: 35%;
  width: 100%;
}
.scroll-location-container{
  white-space: nowrap; 
  display: flex;
}
.scroll-location-item{
  display: inline-block;
  height: 150px;
  width: 150px;
  border-radius:5px;
  margin: 10px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.scroll-location-image{
  height: 150px;
  width: 150px;
  border-radius:8px;
}
.scroll-location-text{
  display: block;
  text-align: center;
}
.event-container{
  width: 100%;
}
.scroll-event-container{
  white-space: nowrap; 
  display: flex;
}
.scroll-event-item{
  display: inline-block;
  height: 150px;
  width: 150px;
  border-radius:5px;
  margin: 10px;
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04)
}
.scroll-event-image{
  height: 150px;
  width: 150px;
  border-radius:8px;
}
.scroll-event-text{
  display: block;
  text-align: center;
}



.showed-item-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  flex-wrap: wrap;
  margin-top: 20px;
  margin-left: 10px;
}

.showed-item{
  height: 360rpx;
  width: 320rpx;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  margin-bottom: 30rpx;
  margin-left: 10rpx;
  
}
.test{
  box-shadow: 0 2px 4px rgba(0, 0, 0, .12), 0 0 6px rgba(0, 0, 0, .04);
}
.item-img{
  width: 100%;
  height: 80%;
  border-radius: 5px;
}
.text-container{
  height: 20%;
  display: flex;
  justify-content:center;
  align-items: center;
}
.text{
display: inline;
}
