<view class="main-container"> 
<view class="people-container"><text>人物:</text>
<scroll-view class="scroll-people-container" scroll-x="true">
  <view class="scroll-people-item" wx:for="{{peoplelist}}">
    <image class="scroll-people-image" src="{{item.firstimagesrc}}" bindtap="openpeople"></image>
  </view>

</scroll-view>
</view>

<view class="location-container"><text>地点:</text>
<scroll-view class="scroll-location-container" scroll-x="true">
    <view class="scroll-location-item" wx:for="{{locationlist}}">
      <image class="scroll-location-image" src="{{item.firstimagesrc}}"></image>
      <text class="scroll-location-text">{{item.locationname}}</text>
    </view>
</scroll-view>
</view>

<view class="event-container"><text>事件:</text>
  <scroll-view class="scroll-event-container" scroll-x="true">
    <view class="scroll-event-item" wx:for="{{eventlist}}">
      <image class="scroll-event-image" src="{{item.firstimagesrc}}"></image>
      <text class="scroll-event-text">{{item.eventname}}</text>
    </view>

</scroll-view>
</view>

</view>
